{
  "Elasticsearch": {
    "Url": "http://localhost:9200",
    "IndexName": "firewall-logs"
  },
  "GeoIP": {
    "DatabasePath": "GeoLite2-City.mmdb"
  },
  "ThreatIntelligence": {
    "AbuseIPDB": {
      "ApiKey": "YOUR_ABUSEIPDB_API_KEY"
    },
    "VirusTotal": {
      "ApiKey": "YOUR_VIRUSTOTAL_API_KEY"
    }
  },
  "Notifications": {
    "Slack": {
      "WebhookUrl": "YOUR_SLACK_WEBHOOK_URL"
    },
    "Teams": {
      "WebhookUrl": "YOUR_TEAMS_WEBHOOK_URL"
    },
    "Email": {
      "ApiKey": "YOUR_EMAIL_API_KEY",
      "SenderAddress": "alerts@yourdomain.com"
    }
  },
  "FileIntegrity": {
    "MonitoredDirectories": [
      "C:\\Windows\\System32",
      "C:\\Program Files",
      "C:\\Program Files (x86)"
    ],
    "MonitoredExtensions": [
      ".exe",
      ".dll",
      ".sys",
      ".bat",
      ".ps1"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
} 